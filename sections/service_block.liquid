<div class="main-services">
    <div class="page-width">
      {% if section.blocks.size > 0 %}
        <div class="service-width-{{section.settings.service_width}} icon-{{section.settings.icon_position}}">
          {% for block in section.blocks %}
            <div class="services icon-{{section.settings.icon_position}}">
              <a
                {% if block.settings.link != blank %}
                  href="{{ block.settings.link }}"
                {% else %}
                  role="link" aria-disabled="true"
                {% endif %}
              >
                {% if block.settings['service-image'] != blank %}
                  <div class="service-img">
                    <img
                      class="lazyload"
                      data-src="{{ block.settings.service-image | img_url: 'master' }}"
                      alt="service Image"
                    >
                  </div>
                {% endif %}
                <div class="service-block">
                  <div class="service-title">{{ block.settings['service-title'] | escape }}</div>
                  <p class="service-desc">{{ block.settings['service-desc'] | escape }}</p>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  
  <style type="text/css">
    #shopify-section-{{ section.id }} {
      margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
    }
    #shopify-section-{{ section.id }} .main-services{
      background-color:{{ section.settings.bg_color }};
    }
    @media (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
      }
    }
  </style>
  
  {% schema %}
   {
     "name": "Services Block",
     "tag": "section",
     "class": "services-block-section",
     "settings": [
      {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#212121"
        },
    {
         "type": "select",
         "id": "service_width",
         "label": "Number Of Columns",
         "default": "3",
         "options": [
           { "value": "2", "label": "2"},
           { "value": "3", "label": "3"},
        { "value": "4", "label": "4"}
         ]
       },
    {
         "type": "select",
         "id": "icon_position",
         "label": "Icon Position",
         "default": "center",
         "options": [
           { "value": "left", "label": "Left"},
           { "value": "center", "label": "Center"}
         ]
       },
    {
         "type": "header",
         "content": "Section Bottom Spacing"
       },
       {
         "type": "range",
         "id": "section_bottom_spacing_desktop",
         "label": "Desktop",
         "min": 0,
         "max": 70,
         "step": 10,
         "default": 70
       },
       {
         "type": "range",
         "id": "section_bottom_spacing_mobile",
         "label": "Mobile",
         "min": 0,
         "max": 50,
         "step": 10,
         "default": 30
       }
     ],
     "blocks": [
       {
         "type": "image",
         "name": "Service",
         "settings": [
           {
             "type": "image_picker",
             "id": "service-image",
             "label": "Image",
             "info":"Size : 40px X 40px"
           },
           {
             "type": "text",
             "id": "service-title",
             "label": "Title",
             "default": "service title"
           },
           {
             "type": "text",
             "id": "service-desc",
             "label": "Sub Title",
             "default": "service sub-title"
           },
           {
             "type": "url",
             "id": "link",
             "label": "Link"
           }
         ]
       }
     ],
  "presets": [
       {
         "name": "Services Block",
         "blocks": [
           {
             "type": "image"
           },
           {
             "type": "image"
           },
           {
             "type": "image"
           }
         ]
       }
     ]
   }
  {% endschema %}
  